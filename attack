 protected void peck(){
  if (health>0){
   System.out.println(name+" is pecking");
  }

  else
   {System.out.println(name + " is dead");
 }
 }
  protected void hit(){
                if (health>0)
                {
                        health--;
                        System.out.println("Take cover! you have been hit. Health is now :"+health);
                }

                else{
                        System.out.println(name+ " is dead!");
                        count--;

                }
  protected void hop(){

                if (health>0) {
                        System.out.println(name + " is hopping");
                }

                else
                {
                        System.out.println(name +" is dead");
                }

        }
}
  protected void honk(){
                if (health > 0){
                        System.out.println(name + " is honking");
                }
                else
                {
                        System.out.println(name + " is dead");
                }

        }
